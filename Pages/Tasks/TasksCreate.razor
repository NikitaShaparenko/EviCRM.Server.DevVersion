                    if (percent >= 100)
                    {
                        _uploading = false;
                        file_UploadedPercentage = 0;
                        file_Size = 0;
                        file_UploadedBytes = 0;
                        file_fileName = "";
                    }

                    await InvokeAsync(StateHasChanged);

