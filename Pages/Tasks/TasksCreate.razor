        const long CHUNKSIZE = 1024 * 400;

        IBrowserFile file = null;

        if (e.FileCount > 1)
        {
            int file_c = 0;
            var file_dump_col = e.GetMultipleFiles(e.FileCount);
            foreach (IBrowserFile file_in in file_dump_col)
