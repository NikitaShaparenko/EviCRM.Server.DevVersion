                NewTask.task_startdate = dt_start;
                NewTask.task_enddate = dt_end;
                NewTask.task_status = "waiting";
                NewTask.task_budget = "task_budget";
                NewTask.tasks_personal_status = genPersonalStatusString();
                NewTask.task_responsible_member = "$null";

                _context.TaskTrackingMain_ExecuteQueue(TOSCRIPT_QUEUE);
                _context.Tasks_Create(NewTask);

                sc.Log("TaskCreate","Задачи \\ Создание","Задача создана успешно! ",SystemCore.LogLevels.Info);
                sc.Syslog(_iwebhost, SessionUser, "Задачи \\ Создание", "Задача создана успешно!", SystemCore.LogLevels.Info);
                await ToastsNotifications_ShowCustomToast_Info("Задача создана успешно!");
                uriHelper.NavigateTo(uriHelper.BaseUri + "/tasks_list");
                return true;
            }
            else
            {
                 isModal_project_analyzer = true;
                 await InvokeAsync(StateHasChanged);
                 sc.Log("TaskCreate","Задачи \\ Создание","Запрошена возможность переноса дат связанных с задачей проектов",SystemCore.LogLevels.Error);
                 sc.Syslog(_iwebhost, SessionUser, "Задачи \\ Создание","Запрошена возможность переноса дат связанных с задачей проектов", SystemCore.LogLevels.Error);
            }
        }
        else
        {
                sc.Log("TaskCreate","Задачи \\ Создание","Ошибка при создании задачи - Задача уже существует!",SystemCore.LogLevels.Error);
                sc.Syslog(_iwebhost, SessionUser, "Задачи \\ Создание", "Ошибка при создании задачи - Задача уже существует!", SystemCore.LogLevels.Error);
                await ToastsNotifications_ShowCustomToast_Danger("Задача уже существует!");
                return false;
        }
            return true;
        
