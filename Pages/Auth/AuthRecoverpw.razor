@page "/login_recovery"

<div class="account-pages my-5 pt-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card overflow-hidden">
                    <div class="bg-primary bg-soft">
                        <div class="row">
                            <div class="col-7">
                                <div class="text-primary p-4">
                                    <h5 class="text-primary">Сбросить пароль</h5>
                                    <p>Сбросить пароль от EviCRM</p>
                                </div>
                            </div>
                            <div class="col-5 align-self-end">
                                <img src="/assets/images/profile-img.png" alt="" class="img-fluid">
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-0">
                        <div>
                            <a href="/">
                                <div class="avatar-md profile-user-wid mb-4">
                                    <span class="avatar-title rounded-circle bg-light">
                                        <img src="/assets/images/logo.svg" alt="" class="rounded-circle" height="34">
                                    </span>
                                </div>
                            </a>
                        </div>

                        <div class="p-2">
                            <div class="alert alert-success text-center mb-4" role="alert">
                              Введите адрес электронной почты, который вы указывали при регистрации и на него придёт письмо с инструкцией по восстановлению пароля
                            </div>
                            

                                <div class="mb-3">
                                    <label for="useremail" class="form-label">Электронная почта</label>
                                    <input type="email" class="form-control" id="useremail" placeholder="Введите электронную почту">
                                </div>

                                <div class="text-end">
                                    <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Сброс</button>
                                </div>

                        </div>

                    </div>
                </div>
                <div class="mt-5 text-center">
                    <p>Помните пароль ? <a href="/login" class="fw-medium text-primary"> Войти</a> </p>
                    <p>
                        ©
                        2022 Evi CRM. Создано с  <i class="mdi mdi-heart text-danger"></i>
                    </p>
                </div>

            </div>
        </div>
    </div>
</div>


