@inject IWebHostEnvironment _env


<div class="modal fade show" id="myModal" style="display:block; background-color: rgba(10,10,10,.8);" aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">@modal_title</h4>
                <button type="button" class="close" @onclick="@ModalCancel">&times;</button>
            </div>

            <div class="modal-body">

                @if (operationType == "CREATE")
                {
                    <h4>Новое событие на @schedule_model.startDate.ToShortDateString()</h4>
                }
                else if (operationType == "VIEW")
                {
                    <h4>Просмотр события @schedule_model.startDate.ToShortDateString()</h4>
                }
                else if (operationType == "EDIT")
                {
                    <h4>Редактирование события @schedule_model.startDate.ToShortDateString()</h4>
                }

                <select @bind="@schedule_model.calendarId" class="me-2">
                    @if (isAdmin)
                    {
                        <option value="corporate" selected>Корпоративный календарь</option>
                        <option value="personal">Личный календарь</option>
                    }
                    else
                    {
                       <option value="personal" selected>Личный календарь</option>
                    }
                   
                    <option value="notes">Заметки</option>
                    <option value="task">Задачник</option>
                    <option value="other">Всё остальное</option>
                </select>

                <p></p>

                <div class="form-group row mb-4">

                    <div class="col-lg-12">
                        <input id="event_title" name="event_title" @bind=@schedule_model.title type="text" class="form-control" placeholder="Название события">
                        <p></p>
                        <textarea style="width: 100%" name="event_description" @bind=@schedule_model.body id="taskdesc-editor"></textarea>
                    </div>

                    <p></p>

                    <div class="col-lg-12">
                        <div class="input-daterange input-group">
                            <input type="datetime-local" class="form-control" @bind=schedule_model.startDate placeholder="Начало выполнения" name="event_start" />
                            <input type="datetime-local" class="form-control" @bind=schedule_model.endDate placeholder="Планируемое окончание" name="event_end" />
                        </div>
                    </div>

                    <p></p>

                    <div class="col-lg-12">
                        <label>
                            <input type="checkbox" id="remind_me" name="remind_me" @bind=@schedule_model.isnotify>
                            Напомни мне в Телеграмме
                        </label>
                    </div>

                     <div class="col-lg-12">

                        @if (schedule_model.isnotify)
                        {
                            <select @bind="@schedule_model.notify_period" class="me-2">
                                <option value="week">За неделю</option>
                                <option value="day">За день</option>
                                <option value="hour3">За 3 часа</option>
                                <option value="hour2">За 2 часа</option>
                                <option selected value="hour">За час</option>
                                <option value="minute30">За 30 минут</option>
                                <option value="minute15">За 15 минут</option>
                                <option value="minute5">За 5 минут</option>
                            </select>
                        }

                    </div>

                <p></p>

                 <div class="col-lg-auto">
                <select @bind="@schedule_model.isinoffice" class="me-2">
                        <option value="office">Занят</option>
                        <option value="freelance">Свободен</option>
